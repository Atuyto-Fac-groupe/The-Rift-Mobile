<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_login_gradient"
>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
    />

    <ImageButton
            android:id="@+id/idBtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_settings"
            android:contentDescription="icon settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline05"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/imLogoTheRift"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo_the_rift"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline50"
            app:layout_constraintTop_toTopOf="@+id/idGuidline05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choisir un joueur"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@+id/idGuidline50"
            tools:layout_editor_absoluteX="25dp">

        <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
        />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>