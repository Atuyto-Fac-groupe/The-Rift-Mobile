<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <!-- Titre centré -->
    <TextView
            android:id="@+id/roomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="Retrouve moi en salle [numéro]"
            android:layout_alignParentEnd="true"
           android:layout_alignParentStart="true" />

    <!-- Image pour le scanner de QR Code -->
    <ImageView
            android:id="@+id/qrScannerImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scanner"
            android:tint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/roomTextView" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

</RelativeLayout>