<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/loading"
>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
    />

    <ImageButton
            android:id="@+id/idBtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_settings"
            android:contentDescription="icon settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline05"
            app:layout_constraintTop_toTopOf="parent"/>


    <EditText
            android:id="@+id/menuSelectedPlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nom du joueur"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/idGuidline50"
            android:background="@drawable/background_input_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/bt_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOUER"
            android:letterSpacing="0.5"
            android:fontFamily="@font/segoeuithis"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:background="@drawable/bubble_button"
            app:layout_constraintTop_toBottomOf="@+id/menuSelectedPlayer"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline90"/>


</androidx.constraintlayout.widget.ConstraintLayout>