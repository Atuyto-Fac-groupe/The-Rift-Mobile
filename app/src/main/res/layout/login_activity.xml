<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_login_gradient"
>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idGuidline90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
    />

    <ImageButton
            android:id="@+id/idBtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_settings"
            android:contentDescription="icon settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline05"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/imLogoTheRift"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo_the_rift"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline50"
            app:layout_constraintTop_toTopOf="@+id/idGuidline05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/menuSelectedPlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nom du joueur"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/idGuidline50"
            android:background="@drawable/background_input_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/titleReady"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="PRET"
            android:padding="15dp"
            android:textSize="80sp"
            android:fontFamily="@font/october_crow"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/idGuidline90"
            app:layout_constraintTop_toBottomOf="@+id/menuSelectedPlayer"

            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/titleStateOtherPlayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="En attente de Joueur 2"
            android:padding="15dp"
            android:fontFamily="@font/ngutang_gong"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/idGuidline90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>